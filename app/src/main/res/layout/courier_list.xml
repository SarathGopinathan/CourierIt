<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_logo"
        android:text="FedEx"
        android:id="@+id/txt_name"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_name"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_cost"
        android:text="Starting from Rs.30/-"
        android:textColor="#000000"
        android:textSize="12dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_cit"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="Courier It"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/star_gray"
        android:id="@+id/img_five"
        android:layout_toLeftOf="@id/btn_cit"
        android:layout_alignBottom="@id/txt_name"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/star_gray"
        android:id="@+id/img_four"
        android:layout_toLeftOf="@id/img_five"
        android:layout_alignBottom="@id/txt_name" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/star_yellow"
        android:id="@+id/img_three"
        android:layout_toLeftOf="@id/img_four"
        android:layout_alignBottom="@id/txt_name"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/star_yellow"
        android:id="@+id/img_two"
        android:layout_toLeftOf="@id/img_three"
        android:layout_alignBottom="@id/txt_name"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/star_yellow"
        android:id="@+id/img_one"
        android:layout_toLeftOf="@id/img_two"
        android:layout_alignBottom="@id/txt_name" />
</RelativeLayout>