<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f3f3f3"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/img_logo"
            android:src="@drawable/login_logo"/>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/rel_fname"
            android:layout_below="@id/img_logo"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_rect"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/user_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:hint="First Name"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:inputType="textCapWords|textCapSentences"
                android:background="@android:color/transparent"
                android:textColor="#f05045"
                android:textColorHint="#f05045"
                android:id="@+id/edt_fname" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/rel_lname"
            android:layout_below="@id/rel_fname"
            android:layout_marginTop="8dp"
            android:background="@drawable/orange_rect"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/user_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:hint="Last Name"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:inputType="textCapWords|textCapSentences"
                android:background="@android:color/transparent"
                android:textColor="#f05045"
                android:textColorHint="#f05045"
                android:id="@+id/edt_lname" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_rect"
            android:layout_below="@id/rel_lname"
            android:id="@+id/rel_mail"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mail"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:hint="Email Address"
                android:textColor="#f05045"
                android:inputType="textEmailAddress"
                android:textColorHint="#f05045"
                android:id="@+id/edt_mail"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_rect"
            android:layout_below="@id/rel_mail"
            android:id="@+id/rel_phone"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/phone"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:hint="Phone Number"
                android:maxLength="10"
                android:layout_centerHorizontal="true"
                android:textColor="#f05045"
                android:inputType="phone"
                android:textColorHint="#f05045"
                android:id="@+id/edt_phone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/rel_phone"
            android:layout_marginTop="8dp"
            android:id="@+id/rel_pass"
            android:background="@drawable/orange_rect"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/password"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:hint="Password "
                android:layout_centerHorizontal="true"
                android:textColor="#f05045"
                android:inputType="textPassword"
                android:textColorHint="#f05045"
                android:id="@+id/edt_pass"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_rect"
            android:layout_below="@id/rel_pass"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/rel_retype" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/password"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:hint="Retype Password"
                android:layout_centerHorizontal="true"
                android:textColor="#f05045"
                android:inputType="textWebPassword"
                android:textColorHint="#f05045"
                android:id="@+id/edt_rpass"/>
        </RelativeLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/chk_terms"
            android:layout_alignLeft="@id/rel_pass"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rel_retype"
            android:textColor="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"
            android:text="I accept the Terms of Service" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#f05045"
            android:textSize="12sp"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/chk_terms"
            android:id="@+id/btn_register"/>


    </RelativeLayout>

</ScrollView>
