<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:theme="@style/ToolbarStyle"
        android:background="@drawable/landing_page_image_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND YOUR PACKAGE DOMESTIC\nAND INTERNATIONAL"
            android:textAlignment="textEnd"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_dom"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_wht"
                android:id="@+id/imageView3" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_send"
            android:padding="5dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/img_send"
                android:layout_centerVertical="true"
                android:src="@drawable/send_packg"/>
            <View
                android:layout_width="45dp"
                android:layout_height="2.5dp"
                android:background="#f05045"
                android:id="@+id/view_send"
                android:layout_toRightOf="@id/img_send"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND COURIER"
                android:layout_toRightOf="@id/view_send"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_track"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rel_send"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/img_track"
                android:layout_centerVertical="true"
                android:src="@drawable/track"/>
            <View
                android:layout_width="45dp"
                android:layout_height="2.5dp"
                android:background="#f05045"
                android:id="@+id/view_track"
                android:layout_toRightOf="@id/img_track"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRACK COURIER"
                android:layout_toRightOf="@id/view_track"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>