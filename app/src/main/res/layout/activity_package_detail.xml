<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/rel_arrow"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/back_arrow_icon"
                android:id="@+id/pd_back"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="280dp"
            android:id="@+id/rel_form"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/top_icon"
                android:layout_centerHorizontal="true"
                android:id="@+id/img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PACKAGE DETAILS"
                android:textColor="#f05045"
                android:id="@+id/txt_package"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO ADDRESS"
                android:id="@+id/txt_to_address"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_below="@id/txt_package"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_to_address"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/rl">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/img_to_locate"
                    android:src="@drawable/loaction_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_to_locate"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/et_to_address"
                    android:inputType="textCapSentences|textCapWords"/>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@drawable/dotted"
                android:layout_below="@+id/rl"
                android:id="@+id/view_dotted"
                android:layout_marginLeft="33dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM ADDRESS"
                android:id="@+id/txt_from_address"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_below="@id/view_dotted"
                android:layout_alignLeft="@id/txt_to_address"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/rel_from"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_from_address"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/loaction_icon"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_from_locate"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_from_locate"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/et_from_address"
                    android:inputType="textCapSentences|textCapWords"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PACKAGE TYPE"
                android:textSize="12dp"
                android:id="@+id/txt_type"
                android:textColor="#000000"
                android:layout_alignLeft="@id/txt_to_address"
                android:layout_below="@id/rel_from"
                android:layout_marginTop="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_type"
                android:layout_alignLeft="@id/txt_type"
                android:layout_alignRight="@id/rel_from"
                android:layout_marginTop="5dp"
                android:background="#f3f3f3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_type"
                android:id="@+id/ll_box"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_box"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/box_icon_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOX"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chk_box"
                    android:buttonTint="@color/colorPrimary"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_type"
                android:id="@+id/ll_envelope"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/ll_box"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_envelope"
                    android:src="@drawable/envelop_icon_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENVELOPE"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chk_envelope"
                    android:visibility="visible"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIORITY"
                android:id="@+id/txt_priority"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_alignLeft="@id/txt_to_address"
                android:layout_below="@id/ll_envelope"
                android:layout_marginTop="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_priority"
                android:layout_alignLeft="@id/txt_type"
                android:layout_alignRight="@id/rel_from"
                android:layout_marginTop="5dp"
                android:background="#f3f3f3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_priority"
                android:id="@+id/ll_std"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_std"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/box_icon_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STANDARD"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chk_std"
                    android:visibility="visible"
                    android:buttonTint="@color/colorPrimary"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_priority"
                android:id="@+id/ll_express"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/ll_std"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_express"
                    android:src="@drawable/envelop_icon_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPRESS"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chk_express"
                    android:visibility="visible"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APROX. WEIGHT(in kg)"
                android:id="@+id/txt_weight"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/ll_std"
                android:layout_alignLeft="@id/txt_to_address"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/rel_weight"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_weight"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/boxweight"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_weight"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_weight"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/et_weight"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUMBER OF PACKAGE"
                android:id="@+id/txt_no_package"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/rel_weight"
                android:layout_alignLeft="@id/txt_to_address"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/rel_no_package"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_no_package"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/no_of_package"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_no_package"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_no_package"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/edt_no_package"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICKUP DATE"
                android:id="@+id/txt_date"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/rel_no_package"
                android:layout_alignLeft="@id/txt_to_address"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/rel_date"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_date"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/date"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_date"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_date"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/edt_date"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME FOR PICKUP"
                android:id="@+id/txt_time"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/rel_date"
                android:layout_alignLeft="@id/txt_to_address"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/rel_time"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_time"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/time"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_time"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_time"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/edt_time"
                    android:inputType="numberDecimal"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DECLARATION"
                android:id="@+id/txt_declare"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/rel_time"
                android:layout_alignLeft="@id/txt_to_address"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/rel_declare"
                android:background="@drawable/orange_rect_white"
                android:layout_below="@id/txt_declare"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/declare"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_declare"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textCursorDrawable="@drawable/orange_cursor"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/img_declare"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:textColor="#f05045"
                    android:textColorHint="#f05045"
                    android:id="@+id/edt_declare"
                    android:inputType="textCapSentences|textCapWords"/>
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rel_choose"
            android:layout_below="@id/rel_form"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
            
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Courier"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </RelativeLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_below="@id/rel_arrow"
                android:layout_above="@id/rel_choose"
                android:src="@drawable/side_bar"/>


    </RelativeLayout>


</ScrollView>
