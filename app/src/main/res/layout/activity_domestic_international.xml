<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/pagetop"
        android:id="@+id/bck">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:id="@+id/img_dom_inter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/icon_top"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/back_arrow_icon"
            android:id="@+id/img_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_dom_inter"
            android:layout_marginTop="10dp"
            android:text="SEND YOUR PACKAGE DOMESTIC\nAND INTERNATIONAL"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:id="@+id/tv_dom"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/bck"
        android:background="#f3f3f3"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_domestic"
            android:padding="5dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/img_dom"
                android:layout_centerVertical="true"
                android:src="@drawable/domastic_icon"/>
            <View
                android:layout_width="45dp"
                android:layout_height="2.5dp"
                android:background="#f05045"
                android:id="@+id/view_dom"
                android:layout_toRightOf="@id/img_dom"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOMESTIC"
                android:layout_toRightOf="@id/view_dom"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_international"
            android:padding="5dp"
            android:layout_alignLeft="@id/rel_domestic"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rel_domestic"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/img_track"
                android:layout_centerVertical="true"
                android:src="@drawable/international_icon"/>
            <View
                android:layout_width="45dp"
                android:layout_height="2.5dp"
                android:background="#f05045"
                android:id="@+id/view_track"
                android:layout_toRightOf="@id/img_track"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTERNATIONAL"
                android:layout_toRightOf="@id/view_track"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
